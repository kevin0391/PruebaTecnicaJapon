<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/wwwroot/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/wwwroot/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/wwwroot/sb-admin-2/css/sb-admin-2.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Prueba Tecnica</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbarText" class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Empleado")"><b>Empleado</b></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Palindromo")"><b>Palíndromo</b></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Logout", "Account")"><b><i class="fa fa-sign-out fa-fw"></i> Salir</b></a>
                </li>
            </ul>
        </div>
    </nav>

    <br />

    @RenderBody()

    <footer class="my-3 pt-3 text-muted text-center text-small">
        <p class="mb-1">&copy; 2018-@DateTime.Now.Year Prueba Tecnica</p>
    </footer>

    <script src="~/wwwroot/jquery/jquery.js"></script>
    <script src="~/wwwroot/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/wwwroot/sb-admin-2/js/sb-admin-2.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
